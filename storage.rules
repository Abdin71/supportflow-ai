rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user is admin
    function isAdmin() {
      return isAuthenticated() && 
             firestore.get(/databases/(default)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    // Helper function to check file size (max 5MB)
    function validFileSize() {
      return request.resource.size < 5 * 1024 * 1024;
    }
    
    // Helper function to check image file types
    function isImage() {
      return request.resource.contentType.matches('image/.*');
    }
    
    // User profile images
    match /users/{userId}/profile/{fileName} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated() && 
                      request.auth.uid == userId && 
                      isImage() && 
                      validFileSize();
      allow delete: if isAuthenticated() && 
                       (request.auth.uid == userId || isAdmin());
    }
    
    // Ticket attachments
    match /tickets/{ticketId}/attachments/{fileName} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated() && validFileSize();
      allow delete: if isAdmin();
    }
    
    // General uploads (admin only)
    match /uploads/{allPaths=**} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
      allow delete: if isAdmin();
    }
  }
}
